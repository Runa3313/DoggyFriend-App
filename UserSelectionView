                // â¤ï¸ çŠ¬ã«è§¦ã‚ŒãŸã„äººå‘ã‘ãƒœã‚¿ãƒ³
                NavigationLink(destination: LoverRegistrationView(isRegistered: $isRegistered)) {
                    selectionButtonLabel(text: "çŠ¬ã«è§¦ã‚ŒãŸã„", color: Color.white.opacity(0.4), textColor: .white, icon: "heart.fill")
